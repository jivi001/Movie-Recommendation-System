  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  
  "protocol_handlers": [
    {
      "protocol": "web+movierec",
      "url": "/movie?id=%s"
    }
  ],
  
  "file_handlers": [
    {
      "action": "/import-list",
